{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	<p>
		Vous êtes bien connecté en tant que
		{{ username }}
	</p>
	<a href="{{ path('liste_new') }}">Créer une liste</a>
	<a href="{{ path('liste_all') }}">Voir les listes</a>
	<a href="{{ path('my_lists') }}">Editer mes listes</a>
	<br>
	<a href="{{ path('app_logout') }}">Déconnexion</a>

{% else %}
	<a href="{{ path('app_login') }}">Se connecter</a>
	<br>
	<a href="{{ path('app_register') }}">S'enregistrer</a>
{% endif %}
